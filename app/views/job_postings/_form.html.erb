<%= simple_form_for(@job_posting, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :description, as: :text, input_html: { rows: "10" } %>


  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
